<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tainaleal.quicknotes" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".UseParse"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_note"
        android:label="@string/app_name"
        android:theme="@style/Theme.Quicknote" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".UpdateStatusActivity"
            android:label="@string/title_activity_update_status" />
        <activity
            android:name=".NoteDetailsActivity"
            android:label="@string/title_activity_note_details" >
        </activity>
    </application>

</manifest>
